# -*- mode: sh -*-
open_game() {
    local fzf_args=( -d : --with-nth 3.. --ansi )
    [ -z "$*" ] || fzf_args+=( -q "$*" )
    if local target=$(ls-games -p 2>/dev/null | _fzf "${fzf_args[@]}") && [ -n "$target" ]; then
        local protocol url
        IFS=: read protocol url _ <<< "$target"
        "${OPENER:-xopen}" "$protocol:$url"
    fi
}
