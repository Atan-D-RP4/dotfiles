# -*- mode: conf-space -*-

alert      notify-send --urgency=low -i "$([ $? = 0 ] && echo terminal || echo error)" "$(get_last_command)"
pdf        zathura
ywd        sh -c 'if [ "$#" -gt 0 ]; then cd "$*" || exit 1; fi; pwd | tee /dev/tty | clip -t' ywd
sd         sudo 
se         sudoedit
xres@file  ~/.Xresources
xp         . ~/.xprofile

btctl             bluetoothctl
jctl              journalctl
jctlr             journalctl --reverse
jctl-errors       journalctl -p 3 -xb
fsck              fsck -M -T

hl                hledger
hlb               hledger balance
hlp               hledger import --dry
hli               hledger import
hlbs              hledger balancesheet --no-elide
