# Windows Compatibility
cls    clear


# Emacs
ec     emacsclient --no-wait --suppress-output
enf    emacs-new-frame.sh


# Python Shortcuts
python python3.7
py     python
pip    py -m pip


# ls Variants
ll     ls -alf
la     ls -A
l      ls -CF
ls     ls --color=auto --group-directories-first


# Colors Colors Colors
grep   grep  --color=auto
fgrep  fgrep --color=auto
egrep  egrep --color=auto


# Git Shortcuts
status  git status
stage   git stage
commit  git commit


# Directory Maps
dl      cd ~/Downloads
music   cd /music
dtop    cd ~/Desktop
h       cd ~


# File Maps
st      nvim ~/.etc/shortcuts


# Misc
nv      nvim
ccat    highlight --out-format=ansi
image   sxiv


# Configure Dotfiles
dot     git --git-dir=${HOME}/.dotfiles --work-tree=${HOME}
dt      dot
ds      dot status
dc      dot commit
da      dot add
dP      dot pull
dp      dot push


# Miscellaneous
cdd     cd -






















































