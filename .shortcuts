# Windows Compatibility
cls    clear


# Emacs
ec     emacsclient --no-wait --suppress-output --server-file ~/.emacs.d/var/server/server
enf    emacs-new-frame.sh
ex     emacs
sx     smacs


# Python Shortcuts
python python3.7
py     python
pip    py -m pip


# ls Variants
ls     ls --color=auto --group-directories-first
ll     ls -alf
la     ls -A
l      ls -CF


# Colors Colors Colors
grep   grep  --color=auto
fgrep  fgrep --color=auto
egrep  egrep --color=auto


# Git Shortcuts
status  git status
stage   git stage
commit  git commit


# Directory Maps
dl      cd ~/Downloads
music   cd ~/multimedia/music
dtop    cd ~/Desktop
h       cd ~
sc      cd ~/programming/scripts
pj      cd ~/programming/projects
rp      cd ~/programming/repos
em      cd ~/.emacs.d


# directory stack maps
## aliases of directory maps which push the
## destinations onto the directory stack.
qdl     pushd ~/Downloads
qmusic  pushd ~/multimedia/music
qdtop   pushd ~/Desktop
qh      pushd ~
qsc     pushd ~/programming/scripts
qpj     pushd ~/programming/projects
qrp     pushd ~/programming/repos
qem     pushd ~/.emacs.d


# File Maps
st      nvim ~/shortcuts


# Programs
_       sudo
nv      nvim
ccat    highlight --out-format=ansi
img     sxiv
## istat = inline stat
istat   stat -c "%A %08s %n"
netcat  ncat
chksum  cksum
e       ${EDITOR}
vim     ${EDITOR}
unmount umount

qa      pushd
qd      popd
qs      dirs -v


# Configure Dotfiles
dot     git --git-dir=${DOTFILES_REPO_PATH} --work-tree=${HOME}
dd      dot
ds      dot status
dc      dot commit
da      dot add
dp      dot pull
dP      dot push


# Miscellaneous
cdd     cd -


# standalone-commands
bash-startup-files      echo exit | strace bash -li |& less | grep '^open'
