#!/usr/bin/sh
# Sync dotfiles through dotty, without any slow setup steps.

cd "$DOTFILES" || exit 1
./manage                                        \
  install                                       \
  -b "$(cat ./setup/cache/dotty.bots || true)"  \
  --except shell                                \
  --except package                              \
  --except sync-submodule                       \
  "$@"
