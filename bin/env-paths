#!/usr/bin/env bash
print_usage() {
  echo "Usage: $(basename "$0") [-h] [-d|-f]"
}

print_help() {
  print_usage
  echo ""
  echo " Display environment variables that point to existing file paths."
  echo ""
  echo "Options:"
  echo "  -h    Show this help message and exit"
  echo "  -f    Only print environment variables pointing to files"
  echo "  -d    Only print environment variables pointing to directories"
}

files_only=0 dirs_only=0
while getopts 'hfd' OPTION; do
  case "$OPTION" in
    h) print_help
       exit 0 ;;
    \?) print_help >&2
        exit 1 ;;
    f) files_only=1 ;;
    d) dirs_only=1 ;;
  esac
done

printenv -0 |
  tr -d '\n' |
  tr '\0' '\n' |
  awk -F = -e '$0 ~ /([^=]+)=([^:]*):/ {
  value=$2
  for (i=3; i <= NF; i++) {
    value = value "=" $i
  }

  count = split(value, entries, ":")
  delete mem # reset from previous loop
  k = 0
  for (j=1; j <= count; j++) {
    if (entries[j] && !mem[entries[j]]++) {
      printf("%s[%d]=%s\n", $1, k++, entries[j])
    }
  }
  next
}' \
    -e '$0' |
  while IFS='=' read -r key value; do
    [ -e "$value" ] || continue

    if [ "$files_only" -eq 1 ]; then [ -f "$value" ];
    elif [ "$dirs_only" -eq 1 ]; then [ -d "$value" ];
    else true; fi &&
      echo "$key=$value"
  done
