# -*- mode: ruby -*-
ENV['LESS'] = '-R -i --save-marks -x4'
if ENV["INSIDE_EMACS"]
    Pry.config.pager = false

    class Emacsable
       def self.readline(prompt)
           print prompt
           (gets || '').chomp
       end
    end

    Pry.config.input = Emacsable
    Pry.color = true
end

Pry.config.commands.alias_command 'cls', '.clear'
Pry.config.commands.alias_command 'wai', 'whereami'
