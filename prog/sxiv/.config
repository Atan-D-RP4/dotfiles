;; -*- mode: clojure -*-
(
 (:clean {:path "$XDG_CONFIG_HOME/sxiv" :recursive true})

 (:packages
   (:default {:desc "Installing sxiv"
              :cmd "git -C sxiv submodule sync --quiet --recursive
                    if ! [ -e sxiv/.git ]; then
                      git submodule update --init --recursive sxiv
                    fi

                    cd sxiv
                    make install"}))

 #dot/link-gen
 (:link "$XDG_CONFIG_HOME/sxiv/exec/key-handler"
        "$XDG_CONFIG_HOME/sxiv/exec/image-info")

 (:import "cmds")
)
