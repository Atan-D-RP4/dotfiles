;; -*- mode: clojure -*-
(
 (:clean {:path "$XDG_CONFIG_HOME/sxiv" :recursive true})

 (:packages
   (:default {:desc "Installing sxiv"
              :cmd "git -C src submodule sync --quiet --recursive
                    if ! [ -e src/.git ]; then
                      git submodule update --init --recursive src
                    fi

                    cd src
                    make install"}))

 #dot/link-gen
 (:link "$XDG_CONFIG_HOME/nsxiv/exec/key-handler"
        "$XDG_CONFIG_HOME/nsxiv/exec/image-info")

 (:import "cmds")
)
