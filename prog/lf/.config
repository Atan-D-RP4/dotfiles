;; -*- mode: clojure -*-
(
 ;; (:packages (:yay "lf")
 ;;            (:choco "lf")
 ;;            (:go "github.com/gokcehan/lf"))

 (:import "../langs/go")
 (:shell {:desc "Building and installing lf"
          :stderr true
          :cmd "git -C lf submodule sync --quiet --recursive
                git submodule update --init --recursive lf

                cd lf
                ./gen/build.sh
                ln -s ./lf \"$HOME/.local/bin/lf\"
               "})

 #dot/link-gen
 (:link "~/.config/lf/lfrc"
        {:src "./cmds/*"
         :dest "~/.config/autoloads/cmds/"
         :glob true}
        {:src "dolphin"
         :dest "~/.local/share/kservices5/ServiceMenus/"
         :if-bots "dolphin"})

 #dot/if-windows #dot/link-gen
 (:link "~/AppData/Local/lf/lfrc")
)
