;; -*- mode: clojure -*-
(
 (:shell {:desc "Sync gdb/mammon configuration"
          :cmd "git -C mammon submodule sync --quiet --recursive
                if ! [ -e mammon/.git ]; then
                  git submodule update --init --recursive mammon
                fi"})

 (:link "gdbinit" "~/.config/gdb/init"
        ;; Adds a bunch of cool color extensions from [[https://stackoverflow.com/questions/209534/how-to-highlight-and-color-gdb-output-during-interactive-debugging][mammon]]
        "mammon/gdbinit" "~/.config/gdb/mammon"
        "mammon.local" "~/.config/gdb/mammon.local")
)
