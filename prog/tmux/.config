;; -*- mode: clojure -*-
(
 (:packages (:apt "tmux")
            (:msys "tmux")
            (:yay "tmux-git"))

 (:packages (:pip "tmuxp"))

 (:clean {:path "$XDG_CONFIG_HOME/tmux" :recursive true})

 (:link "tmuxrc" "$XDG_CONFIG_HOME/tmux/tmux.conf"
        "themerc" "$XDG_CONFIG_HOME/tmux/theme.conf"
        {:src "cmds/*" :dest "$XDG_BIN_DIR" :glob true}
        {:src "auto/*" :dest "$XDG_CONFIG_HOME/autoloads/cmds/" :glob true}
        {:src "theme/*" :dest "$XDG_CONFIG_HOME/tmux/theme/" :glob true}
        {:src "layouts/*" :dest "$XDG_CONFIG_HOME/tmuxp/" :glob true})

 (:mkdirs "$XDG_CACHE_HOME/tmux"
          "$XDG_DATA_HOME/tmux")

 (:import "tmux-cmds")
)
