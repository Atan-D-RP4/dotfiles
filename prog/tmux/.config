;; -*- mode: clojure -*-
(
 (:packages (:apt "tmux")
            (:msys "tmux")
            (:yay "tmux-git"))

 (:packages (:gem "tmuxinator"))

 (:shell
  {:cmd ("tic -x ./terminfo/tmux.terminfo"
         "tic -x ./terminfo/tmux-24bit.terminfo")
   :desc "Installing tmux terminfo"})

 (:link "theme" "~/.config/tmux/theme"
        "tmuxrc" "~/.config/tmux/tmux.conf"
        {:src "layouts/*" :dest "~/.config/tmuxinator/" :glob true})

 (:mkdirs "~/.cache/tmux")

 (:import "cmds")
)
