 (:when (:bots "st")
   (:shell {:desc "Installing st, the Suckless Terminal"
            :cmd "git -C st submodule sync --quiet --recursive
                  if ! [ -e st/.git ]; then
                    git submodule update --init --recursive st
                  fi

                  cd st
                  make install"}))

