# -*- mode: yaml -*-

- shell:
   - description: Sync Bat Theme
     quiet: true
     command: |-
       git -C emacs submodule sync --quiet --recursive
       git submodule update --init --recursive an-old-hope

- link:
    ~/.config/bat/themes/config: batrc
    ~/.config/bat/themes/an-old-hope.tmTheme: an-old-hope.tmTheme
