;; -*- mode: clojure -*-
(
 (:package (:pacman "bat"))

 (:shell {:desc "Sync bat theme"
          :cmd "git -C emacs submodule sync --quiet --recursive
                git submodule update --init --recursive an-old-hope"})

 (:link "batrc" "$XDG_CONFIG_HOME/bat/config"
        "./an-old-hope/an-old-hope.tmTheme" "$XDG_CONFIG_HOME/bat/themes/an-old-hope.tmTheme")
)
